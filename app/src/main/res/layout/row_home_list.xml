<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <FrameLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:paddingBottom="16dp"
            android:background="#F1F1F1">


            <TextView
                android:id="@+id/txtHomeOne"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="70dp"
                android:layout_marginEnd="4dp"
                android:layout_toStartOf="@+id/txtHomeWallet"
                android:fontFamily="@font/helvetica_neue_medium"
                android:text="@string/txt_home_one"
                android:textColor="#2D2D2D"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txtHomeTwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/helvetica_neue_medium"
                android:text="@string/txt_home_two"
                android:textColor="#676767"
                android:layout_below="@+id/txtHomeOne"
                android:textSize="@dimen/dimen_10sp" />


            <TextView
                android:id="@+id/txtHomeWallet"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="76dp"
                android:background="@drawable/home_bg"
                android:fontFamily="@font/helvetica_neue_medium"
                android:gravity="center"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:text="@string/txt_home_three"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/dimen_10sp" />



        </RelativeLayout>


    <android.support.v7.widget.CardView
         android:layout_width="match_parent"
         android:layout_height="144dp"
        android:layout_marginStart="16dp"
        app:cardCornerRadius="5dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp">

        <ImageView
            android:id="@+id/ivPro"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/dummy_event"
            android:contentDescription="@string/app_name" />

</android.support.v7.widget.CardView>

    </FrameLayout>



</layout>