<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">



<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    android:background="#F4F4F4"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="5dp"
        app:cardCornerRadius="4dp"
        android:clipToPadding="false"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="#F4F4F4"
        android:layout_marginStart="@dimen/dimen_16sp"
        android:layout_marginEnd="@dimen/dimen_16sp">

        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="#7ED321"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

        <TextView
            android:id="@+id/txtTicketPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/transtion_price"
            android:textColor="#272727"
            android:textSize="22sp"
            android:fontFamily="@font/helvetica_neue_medium"/>

        <TextView
            android:id="@+id/txtDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/transtion_date"
            android:textSize="@dimen/dimen_10sp"
            android:textColor="#676767"
            android:fontFamily="@font/helvetica_neue_medium"/>
        <TextView
            android:id="@+id/txtStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/transtion_valid"
            android:drawableStart="@drawable/ic_info"
            android:textSize="@dimen/dimen_10sp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:drawablePadding="6dp"
            android:textColor="#2E000000"
            android:fontFamily="@font/helvetica_neue_regular"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>
</layout>