<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="6dp" />
            <stroke android:color="#80072B4F"
                android:width="1dp"/>
        </shape>
    </item>

    <item android:state_focused="true">
        <shape>
            <corners android:radius="6dp" />
            <stroke android:color="#CC072B4F"
                android:width="1dp"/>
        </shape>
    </item>
    <item>
        <shape>

            <corners android:radius="6dp" />
            <stroke android:color="#072B4F"
                android:width="1dp"/>
        </shape>

    </item>
</selector>